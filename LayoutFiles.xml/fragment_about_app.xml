<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <!-- App Icon -->
        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:src="@drawable/only_owl"
            android:contentDescription="App Icon"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"/>

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BookHoot"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"/>

        <!-- App Version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: 1.0"
            android:textSize="25sp"
            android:layout_marginBottom="16dp" />

        <!-- App Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BookHoot is a simple and user-friendly book browsing app. Browse, read, and save your favorite books easily with a clean UI."
            android:textSize="26sp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="4dp"
            android:textAlignment="center"/>

        <!-- Developer Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer: Sanstubh Katiyar"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="25dp"
            android:padding="5dp"
            />

        <!-- Contact Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact: katiyarsanstubh@gmail.com"
            android:textSize="18sp"
            android:autoLink="email"
            android:layout_marginTop="12dp"
            android:padding="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"/>
    </LinearLayout>
</ScrollView>